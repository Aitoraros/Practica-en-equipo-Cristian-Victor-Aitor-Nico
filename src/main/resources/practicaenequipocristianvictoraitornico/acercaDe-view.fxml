<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextArea?>
<AnchorPane prefWidth="350" prefHeight="520"
            style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e6e6e6);
                   -fx-border-color: gold; -fx-border-width: 6px;
                   -fx-border-radius: 15; -fx-background-radius: 15;"
            xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">

    <!-- Título -->
    <Label layoutX="80" layoutY="15" text="Super Campeones"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #14c400;" />

    <!-- Imagen del jugador -->
    <ImageView fx:id="imagenJugador" layoutX="75" layoutY="45" fitWidth="200" fitHeight="240"
               style="-fx-effect: dropshadow(gaussian, #00000088, 15, 0.5, 0, 0); -fx-background-radius: 10;" />

    <!-- Información del jugador -->
    <VBox layoutX="35" layoutY="295" spacing="6" prefWidth="280"
          style="-fx-background-color: #f0f0f0; -fx-background-radius: 10; -fx-padding: 10;">
        <Label text="Nombre: Oliver Atom" style="-fx-font-size: 15px; -fx-font-weight: bold;" />
        <Label text="Posición: Delantero" style="-fx-font-size: 13px;" />
        <Label text="Equipo: New Team" style="-fx-font-size: 13px;" />
        <Label text="Número: 10" style="-fx-font-size: 13px;" />
        <Label text="Goles: 56" style="-fx-font-size: 13px;" />
        <Label text="Partidos Jugados: 78" style="-fx-font-size: 13px;" />
    </VBox>

    <!-- Biografía -->
    <TextArea layoutX="20" layoutY="400" prefWidth="310" prefHeight="60" editable="false" wrapText="true"
              style="-fx-control-inner-background: #f9f9f9; -fx-font-size: 12px; -fx-border-radius: 10;">
        <text>
            Biografía: Capitán del New Team, líder nato y apasionado del fútbol. Su visión de juego y determinación lo convierten en un referente.
        </text>
    </TextArea>

    <!-- Botón volver -->
    <Button fx:id="btnVolver" text="Volver" layoutX="135" layoutY="475"
            style="-fx-background-color: #FFD700; -fx-font-weight: bold; -fx-text-fill: black; -fx-background-radius: 10; -fx-cursor: hand;" />

</AnchorPane>
